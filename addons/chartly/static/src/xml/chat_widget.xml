<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    
    <t t-name="chartly.chat_widget">
        <style>
            .chat-messages-scrollable::-webkit-scrollbar {
                display: none;
            }
            .chat-messages-scrollable {
                -ms-overflow-style: none;
                scrollbar-width: none;
            }
            .o_form_view_container::-webkit-scrollbar {
                display: none !important;
            }
            .o_form_view_container {
                -ms-overflow-style: none !important;
                scrollbar-width: none !important;
            }
            .o_content::-webkit-scrollbar {
                display: none !important;
            }
            .o_content {
                -ms-overflow-style: none !important;
                scrollbar-width: none !important;
            }
            .o_form_renderer::-webkit-scrollbar {
                display: none !important;
            }
            .o_form_renderer {
                -ms-overflow-style: none !important;
                scrollbar-width: none !important;
            }
            .o_chat_widget_container::-webkit-scrollbar {
                display: none !important;
            }
            .o_chat_widget_container {
                -ms-overflow-style: none !important;
                scrollbar-width: none !important;
            }
            
            .loading-dots {
                display: flex;
                align-items: center;
                gap: 4px;
            }
            .loading-dots span {
                width: 8px;
                height: 8px;
                background-color: #888;
                border-radius: 50%;
                animation: bounce 1.4s infinite ease-in-out both;
            }
            .loading-dots span:nth-child(1) {
                animation-delay: -0.32s;
            }
            .loading-dots span:nth-child(2) {
                animation-delay: -0.16s;
            }
            .loading-dots span:nth-child(3) {
                animation-delay: 0s;
            }
            @keyframes bounce {
                0%, 80%, 100% {
                    transform: scale(0);
                }
                40% {
                    transform: scale(1);
                }
            }
            
            .send-button-icon {
                font-size: 16px;
                color: #ffffff;
            }
            .send-button-square {
                width: 14px;
                height: 14px;
                background-color: #ffffff;
                border-radius: 2px;
            }
        </style>
        <div class="chat-widget-container" style="min-height: calc(100vh - 200px); display: flex; flex-direction: column; background: #ffffff;">
            <div class="chat-messages chat-messages-scrollable" style="flex: 1; overflow-y: auto; padding: 24px 0; padding-bottom: 120px;">
                <div style="max-width: 60%; margin: 0 auto;">
                    <t t-if="state.messages.length">
                        <t t-foreach="state.messages" t-as="message" t-key="message.id">
                            <div class="message-wrapper" style="margin-bottom: 18px;">
                                <t t-if="message.sender == 'user'">
                                    <div style="display: flex; justify-content: flex-end;">
                                        <div style="background: #f0f0f0; color: #333; padding: 12px 16px; border-radius: 18px 18px 0px 18px; max-width: 66.66%;">
                                            <div style="white-space: pre-wrap; word-wrap: break-word; line-height: 1.5; font-size: 0.95em;" t-esc="message.content"/>
                                            <div style="font-size: 0.7em; opacity: 0.6; margin-top: 6px; text-align: right;" t-esc="message.created_at"/>
                                        </div>
                                    </div>
                                </t>
                                <t t-if="message.sender == 'ai'">
                                    <div style="display: flex; justify-content: flex-start;">
                                        <div style="background: transparent; border: none; color: #333; padding: 12px 0; width: 100%;">
                                            <t t-if="message.isLoading">
                                                <div class="loading-dots">
                                                    <span></span>
                                                    <span></span>
                                                    <span></span>
                                                </div>
                                            </t>
                                            <t t-else="">
                                                <div style="white-space: pre-wrap; word-wrap: break-word; line-height: 1.5; font-size: 0.95em;" t-esc="message.content"/>
                                                <t t-if="message.image">
                                                    <img t-att-src="'data:image/png;base64,' + message.image" style="max-width: 100%; margin-top: 8px;" />
                                                </t>
                                                <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 6px;">
                                                    <span style="font-size: 0.65em; color: #888; opacity: 0.7;">
                                                        <t t-if="message.cost">$<t t-esc="message.cost.toFixed(5)"/></t>
                                                    </span>
                                                    <span style="font-size: 0.7em; opacity: 0.5;" t-esc="message.created_at"/>
                                                </div>
                                            </t>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </t>
                        <div class="scroll-anchor" style="height: 1px;"></div>
                    </t>
                    <t t-else="">
                        <div style="text-align: center; color: #999; padding: 60px 40px; font-size: 1.1em;">
                            No messages yet. Start a conversation!
                        </div>
                    </t>
                </div>
            </div>
            
            <div class="chat-input-container" style="position: fixed; bottom: 0; left: 0; right: 0; padding: 20px 0; background: #ffffff; border-top: 1px solid #e0e0e0; display: flex; justify-content: center; align-items: center;">
                <div style="position: relative; width: 60%;">
                    <input type="text" 
                           placeholder="Type your message here..." 
                           class="form-control chat-message-input" 
                           t-model="state.inputValue"
                           t-on-keypress="onKeyPress"
                           t-att-disabled="state.isLoading"
                           style="width: 100%; padding: 14px 60px 14px 20px; border: 1px solid #d0d0d0; border-radius: 25px; background: #f9f9f9; color: #333; font-size: 0.95em; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);"/>
                    <button type="button" 
                            class="btn btn-primary chat-send-button"
                            t-on-click="onSendMessage"
                            t-att-disabled="state.isLoading"
                            style="position: absolute; right: 8px; top: 50%; transform: translateY(-50%); width: 40px; height: 40px; background: #1a1a1a; color: white; border: none; border-radius: 50%; cursor: pointer; display: flex; align-items: center; justify-content: center;">
                        <t t-if="state.isLoading">
                            <div class="send-button-square"></div>
                        </t>
                        <t t-else="">
                            <span class="send-button-icon">âž”</span>
                        </t>
                    </button>
                </div>
            </div>
        </div>
    </t>
    
</templates>