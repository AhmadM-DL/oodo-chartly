<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    
    <t t-name="chartly.chat_widget">
        <div class="chat-widget-container" style="min-height: calc(100vh - 200px); display: flex; flex-direction: column; background: #ffffff;">
            <div class="chat-messages" style="flex: 1; overflow-y: auto; padding: 24px 0; padding-bottom: 120px;">
                <div style="max-width: 50%; margin: 0 auto;">
                    <t t-if="state.messages.length">
                        <t t-foreach="state.messages" t-as="message" t-key="message.id">
                            <div class="message-wrapper" style="margin-bottom: 18px;">
                                <t t-if="message.sender == 'user'">
                                    <div style="display: flex; justify-content: flex-end;">
                                        <div style="background: #e0e0e0; color: #333; padding: 12px 16px; border-radius: 18px; max-width: 83.33%; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);">
                                            <div style="white-space: pre-wrap; word-wrap: break-word; line-height: 1.5; font-size: 0.95em;" t-esc="message.content"/>
                                            <div style="font-size: 0.7em; opacity: 0.6; margin-top: 6px; text-align: right;" t-esc="message.created_at"/>
                                        </div>
                                    </div>
                                </t>
                                <t t-if="message.sender == 'ai'">
                                    <div style="display: flex; justify-content: flex-start;">
                                        <div style="color: #333; padding: 12px 0; width: 100%;">
                                            <div style="white-space: pre-wrap; word-wrap: break-word; line-height: 1.5; font-size: 0.95em;" t-esc="message.content"/>
                                            <div style="font-size: 0.7em; opacity: 0.5; margin-top: 6px;" t-esc="message.created_at"/>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </t>
                    </t>
                    <t t-else="">
                        <div style="text-align: center; color: #999; padding: 60px 40px; font-size: 1.1em;">
                            No messages yet. Start a conversation!
                        </div>
                    </t>
                </div>
            </div>
            
            <div class="chat-input-container" style="position: fixed; bottom: 0; left: 0; right: 0; padding: 20px 0; background: #ffffff; border-top: 1px solid #e0e0e0; display: flex; justify-content: center; align-items: center;">
                <div style="position: relative; width: 50%; max-width: 600px;">
                    <input type="text" 
                           placeholder="Type your message here..." 
                           class="form-control chat-message-input" 
                           t-model="state.inputValue"
                           t-on-keypress="onKeyPress"
                           style="width: 100%; padding: 14px 60px 14px 20px; border: 1px solid #d0d0d0; border-radius: 25px; background: #f9f9f9; color: #333; font-size: 0.95em; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);"/>
                    <button type="button" 
                            class="btn btn-primary chat-send-button"
                            t-on-click="onSendMessage" 
                            style="position: absolute; right: 8px; top: 50%; transform: translateY(-50%); width: 40px; height: 40px; background: #1e90ff; color: white; border: none; border-radius: 50%; cursor: pointer; display: flex; align-items: center; justify-content: center; box-shadow: 0 2px 8px rgba(30, 144, 255, 0.3);">
                        <span style="font-size: 18px;">â†’</span>
                    </button>
                </div>
            </div>
        </div>
    </t>
    
</templates>
