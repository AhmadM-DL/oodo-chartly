<templates>
    <t t-name="OpenAIChat.chat_list">
        <div class="chat-list">
            <h2>Historical Chats</h2>
            <t t-foreach="chats" t-as="chat">
                <div class="chat-item">
                    <span class="chat-title"><t t-esc="chat.title"/></span>
                    <span class="chat-date"><t t-esc="chat.date"/></span>
                    <button t-on-click="openChat(chat.id)">Open</button>
                </div>
            </t>
            <button t-on-click="createNewChat">New Chat</button>
        </div>
    </t>

    <t t-name="OpenAIChat.chat_ui">
        <div class="chat-ui">
            <div class="message-history">
                <t t-foreach="messages" t-as="message">
                    <div class="message">
                        <strong><t t-esc="message.sender"/></strong>: <t t-esc="message.content"/>
                    </div>
                </t>
            </div>
            <div class="message-input">
                <input type="text" t-model="newMessage" placeholder="Type your message here..."/>
                <button t-on-click="sendMessage">Send</button>
            </div>
        </div>
    </t>

    <t t-name="OpenAIChat.settings">
        <div class="settings">
            <h2>Settings</h2>
            <div class="setting-item">
                <label for="api_key">OpenAI API Key:</label>
                <input type="text" id="api_key" t-value="settings.api_key" readonly="readonly"/>
            </div>
        </div>
    </t>
</templates>