<odoo>
    <data>
        <record id="chartly_chat_tree_view" model="ir.ui.view">
            <field name="name">chartly.chat.tree</field>
            <field name="model">chartly.chat</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="title" />
                    <field name="message_count" />
                    <field name="created_at" />
                </tree>
            </field>
        </record>

        <record id="chartly_chat_form_view" model="ir.ui.view">
            <field name="name">chartly.chat.form</field>
            <field name="model">chartly.chat</field>
            <field name="arch" type="xml">
                <form>
                    <div style="position: sticky; top: 0; z-index: 100; background: #ffffff; border-bottom: 1px solid #e0e0e0; padding: 2px; display: flex; align-items: center; justify-content: space-between; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05); margin: -16px -16px 0 -16px;">
                        <div class="oe_title" style="margin: 0;">
                            <h3 style="margin: 0; font-size: 1.5em;">
                                <field name="title" placeholder="Chat Title" />
                            </h3>
                        </div>
                        <field name="created_at" readonly="1" style="font-size: 0.9em; color: #666;" />
                    </div>
                    <div class="o_chat_widget_container" />
                </form>
            </field>
        </record>

        <record id="action_chartly_chat" model="ir.actions.act_window">
            <field name="name">Chartly Chat</field>
            <field name="res_model">chartly.chat</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create': True}</field>
        </record>

        <record id="action_new_chat" model="ir.actions.server">
            <field name="name">New Chat</field>
            <field name="model_id" ref="model_chartly_chat" />
            <field name="state">code</field>
            <field name="code">
                action = model.create_new_chat()
            </field>
        </record>

    </data>
</odoo>