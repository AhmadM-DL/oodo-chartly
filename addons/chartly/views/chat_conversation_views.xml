<odoo>
    <data>
        <record id="view_chat_conversation_tree" model="ir.ui.view">
            <field name="name">chat.conversation.tree</field>
            <field name="model">openai.chat.conversation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="title"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <record id="view_chat_conversation_form" model="ir.ui.view">
            <field name="name">chat.conversation.form</field>
            <field name="model">openai.chat.conversation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="title" readonly="1"/>
                            <field name="date" readonly="1"/>
                        </group>
                        <group>
                            <field name="messages" widget="one2many_list"/>
                        </group>
                        <footer>
                            <button name="send_message" type="object" string="Send Message" class="btn-primary"/>
                            <field name="new_message" placeholder="Type your message here..."/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_chat_conversation" model="ir.actions.act_window">
            <field name="name">Chat Conversations</field>
            <field name="res_model">openai.chat.conversation</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_openai_chat" name="OpenAI Chat" sequence="10"/>
        <menuitem id="menu_chat_conversation" name="Chat Conversations" parent="menu_openai_chat" action="action_chat_conversation" sequence="10"/>
    </data>
</odoo>