<odoo>
    <data>
        <!-- Inherit from base settings form -->
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.chartly</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="15"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="group_chartly_settings"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_chartly_settings"/>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                            <div class="text-muted">
                                Configure Chartly integration settings
                            </div>
                            <div class="content-group" attrs="{'invisible': [('group_chartly_settings', '=', False)]}">
                                <div class="mt16">
                                    <field name="api_key" password="True" 
                                           placeholder="Enter your Chartly API Key"
                                           class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- Action for chartly settings -->
        <record id="action_chartly_settings" model="ir.actions.act_window">
            <field name="name">Chartly Settings</field>
            <field name="res_model">chartly.settings</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
            <field name="context">{'module': 'chartly'}</field>
        </record>

    </data>
</odoo>