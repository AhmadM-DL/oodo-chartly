<record id="view_chat_message_tree" model="ir.ui.view">
    <field name="name">chat.message.tree</field>
    <field name="model">openai.chat.message</field>
    <field name="arch" type="xml">
        <tree>
            <field name="date"/>
            <field name="content"/>
        </tree>
    </field>
</record>

<record id="view_chat_message_form" model="ir.ui.view">
    <field name="name">chat.message.form</field>
    <field name="model">openai.chat.message</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="date" readonly="1"/>
                    <field name="content"/>
                </group>
                <footer>
                    <button name="send_message" type="object" string="Send" class="btn-primary"/>
                </footer>
            </sheet>
        </form>
    </field>
</record>

<record id="action_chat_message" model="ir.actions.act_window">
    <field name="name">Chat Messages</field>
    <field name="res_model">openai.chat.message</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem id="menu_chat_message" name="Chat Messages" parent="menu_openai_chat_root" action="action_chat_message"/>